{
    "$schema": "./schema/v1/config.schema.json",
    "defaultLayout": "presenter-presentation-dynamic",

    "defaultLanguage": "en",
    "defaultVideoPreview": "/ui/config/paella8/default_preview_landscape.jpg",
    "defaultVideoPreviewPortrait": "/ui/config/paella8/default_preview_portrait.jpg",

    "logLevel": "INFO",

    "accessibility": {
        "clickWithSpacebar": false
    },
    
    "buttonGroups": [
        {
            "enabled": true,
            "groupName": "settingsGroup",
            "description": "Settings options",
            "icon": "settings-icon.svg",
            "order": 99,
            "side": "right",
            "parentContainer": "playbackBar",
            "menuTitle": "Settings"
        }
    ],

    "progressIndicator": {
        "inlineMode": false,
        "showTotal": true,
        "parentContainer": "buttonArea",
        "side": "left",
        "visible": false,
        "showHandler": true,
        "hideHandlerOnMouseOut": true,
        "showRemainingProgress": true
    },

    "preferences": {
        "currentSource": "dataPlugin",
        "sources": {
            "cookie": {
                "consentType": "necessary"
            },
            "dataPlugin": {
                "context": "preferences"
            }
        }
    },

    "videoContainer": {
        "overPlaybackBar": false,
        "restorePlaybackRate": true,
        "restoreVolume": true,
        "restoreVideoLayout": {
            "enabled": false,
            "global": true
        },
        "restoreLastTime": {
            "enabled": true,
            "remainingSeconds": 5
        },

        "dynamicLayout": {
            "landscapeVerticalAlignment": "align-center",
            "portraitHorizontalAlignment": "align-center"
        }
    },

    "opencast": {
        "auth": "/paella8/ui/auth.html",
        "conversionConfig": {
            "captionsBackwardsCompatibility": false,
            "segmentPreviewAttachmentsFlavours": ["presentation/segment+preview"],
            "playerPreviewAttachmentsFlavours": ["presenter/player+preview", "presentation/player+preview"],
            "timelineAttachmentsFlavours": ["presentation/timeline+preview", "presenter/timeline+preview"],
            "tagFor360Video": "video360"
        },
        "hideTimeLineOnLive": false,
        "theme": "custom_theme",

        "__mainAudioContent": "presenter",
        "__preventVideoDownload": false
    },

    "cookieConsent": [
        {
            "type": "strictly-necessary",
            "title": "Strictly necessary cookies",
            "description": "These cookies are essential to provide you with services available through our website and to enable you to use certain features of our website.",
            "required": true
        },
        {
            "type": "functionality",
            "title": "Functionality cookies",
            "description": "These cookies are used to provide you with a more personalized experience on our website and to remember choices you make when you use our website.",
            "required": false
        },
        {
            "type": "tracking",
            "title": "Tracking cookies",
            "description": "These cookies are used to collect information to analyze the traffic to our website and how visitors are using our website.",
            "required": false
        },
        {
            "type": "targeting",
            "title": "Targeting and advertising cookies",
            "description": "These cookies are used to show advertising that is likely to be of interest to you based on your browsing habits.",
            "required": false
        }
    ],

    "plugins": {
       "es.upv.paella.video360Canvas": {
            "enabled": true,
            "maxZoom": 2,
            "minZoom": 0.5,
            "speedX": 0.4,
            "speedY": 0.4,
            "order": 0
        },

        "/* layout plugins */": "*********************************************************",
        "es.upv.paella.singleVideo": {
            "enabled": true,
            "validContent": [
                {
                    "id": "presenter",
                    "content": [
                        "presenter"
                    ],
                    "icon": "present-mode-2.svg",
                    "title": "Presenter"
                },
                {
                    "id": "presentation",
                    "content": [
                        "presentation"
                    ],
                    "icon": "present-mode-1.svg",
                    "title": "Presentation"
                },
                {
                    "id": "presenter-2",
                    "content": [
                        "presenter-2"
                    ],
                    "icon": "present-mode-1.svg",
                    "title": "Presentation"
                }
            ],
            "dualVideoContentIds": [
                "presenter-presentation-dynamic",
                "presenter-2-presentation-dynamic",
                "presenter-presenter-2-dynamic"
            ]
        },
        "es.upv.paella.dualVideo": {
            "enabled": false,
            "validContent": [
                {
                    "id": "presenter-presentation",
                    "content": [
                        "presenter",
                        "presentation"
                    ],
                    "icon": "present-mode-3.svg",
                    "title": "Presenter and presentation"
                },
                {
                    "id": "presenter-2-presentation",
                    "content": [
                        "presenter-2",
                        "presentation"
                    ],
                    "icon": "present-mode-3.svg",
                    "title": "Presenter and presentation"
                },
                {
                    "id": "presenter-presenter-2",
                    "content": [
                        "presenter",
                        "presenter-2"
                    ],
                    "icon": "present-mode-3.svg",
                    "title": "Presenter and presentation"
                }
            ]
        },
        "es.upv.paella.dualVideoDynamic": {
            "enabled": true,
            "validContent": [
              {
                "id": "presenter-presentation-dynamic",
                "content": [
                  "presenter",
                  "presentation"
                ],
                "icon": "present-mode-3.svg",
                "title": "Presenter and presentation"
              },
              {
                "id": "presenter-2-presentation-dynamic",
                "content": [
                  "presenter-2",
                  "presentation"
                ],
                "icon": "present-mode-3.svg",
                "title": "Presenter and presentation"
              },
              {
                "id": "presenter-presenter-2-dynamic",
                "content": [
                  "presenter",
                  "presenter-2"
                ],
                "icon": "present-mode-3.svg",
                "title": "Presenter and presentation"
              }
            ]
        },
        "es.upv.paella.tripleVideo": {
            "enabled": false,
            "validContent": [
                {
                    "id": "presenter-presenter-2-presentation",
                    "content": [
                        "presenter",
                        "presenter-2",
                        "presentation"
                    ],
                    "icon": "present-mode-4.svg",
                    "title": "Presenter and presentation"
                },
                {
                    "id": "presenter-2-presenter-3-presentation",
                    "content": [
                        "presenter-2",
                        "presenter-3",
                        "presentation"
                    ],
                    "icon": "present-mode-4.svg",
                    "title": "Presenter and presentation"
                }
            ]
        },
        "org.opencast.paella.multiVideoDynamicLayout": {
            "enabled": true,
            "validContent": [
                {
                    "id": "multi-video",
                    "content": [],
                    "icon": "present-mode-4.svg",
                    "title": "Auto"
                }
            ]
        },

        "/* video formats plugins */": "*********************************************************",
        "es.upv.paella.hlsVideoFormat": {
            "enabled": true,
            "order": 0,
            "hlsConfig": {
                "maxBufferLength": 40
            },
            "crossOrigin": false,
            "corsConfig": {
                "withCredentials": false,
                "requestHeaders": {
                    "Access-Control-Allow-Credentials": true
                }
            }
        },

        "es.upv.paella.hlsLiveVideoFormat": {
            "enabled": true,
            "order": 0,
            "hlsConfig": {
                "maxBufferLength": 40
            },
            "crossOrigin": false,
            "corsConfig": {
                "withCredentials": false,
                "requestHeaders": {
                    "Access-Control-Allow-Credentials": false
                }
            }
        },
        "es.upv.paella.mp4MultiQualityVideoFormat": {
            "enabled": true,
            "order": 1
        },
        "es.upv.paella.mp4VideoFormat": {
            "enabled": false,
            "order": 1
        },
        "es.upv.paella.htmlVideoFormat": {
            "enabled": true,
            "order": 2
        },
        "es.upv.paella.imageVideoFormat": {
            "enabled": true,
            "order": 3
        },
        "es.upv.paella.audioVideoFormat": {
            "enabled": true,
            "order": 4
        },

        "/* left toolbar buttons*/": "*********************************************************",
        "es.upv.paella.playPauseButton": {
            "enabled": true,
            "side": "left",
            "order": 0,            
            "description": "Play and pause button"
        },
        "es.upv.paella.currentTimeLabel": {
            "enabled": true,
            "side": "left",
            "order": 1,
            "showTotalTime": true
        },
        "es.upv.paella.customTimeProgressIndicator": {
            "enabled": true,
            "textSize": "large",
            "showTotal": true,
            "order": 2
        },
        "es.upv.paella.backwardButtonPlugin": {
            "enabled": true,
            "side": "left",
            "order": 3,
            "time": 10,
            "suffix": false
        },
        "es.upv.paella.forwardButtonPlugin": {
            "enabled": true,
            "side": "left",
            "order": 4,
            "time": 10,
            "suffix": false
        },
        "es.upv.paella.playbackRateButton": {
            "enabled": true,
            "side": "left",
            "order": 5,
            "showIcon": false,
            "rates": [0.75, 1, 1.25, 1.5, 2],
            "popUpType": "no-modal"
        },
        "es.upv.paella.volumeButtonPlugin": {
            "enabled": true,
            "side": "left",
            "order": 6,
            "volumeAlwaysVisible": true
        },


        "/* right toolbar buttons*/": "*********************************************************",

        "org.opencast.paella.loginPlugin": {
            "enabled": true,
            "side": "right",            
            "order": 92
        },
        "org.opencast.paella.editorPlugin": {
            "enabled": true,
            "side": "right",            
            "order": 92,
            "showIfAnonymous": false,
            "showIfCanWrite": true,
            "editorUrl": "/editor-ui/index.html?id={id}"
        },
        "es.upv.paella.layoutSelector": {
            "enabled": true,
            "side": "right",
            "order": 101,
            "closeParentPopUp": true,
            "popUpType": "no-modal",
            "showIcons": false
        },
        "es.upv.paella.frameControlButtonPlugin": {
            "enabled": true,
            "side": "right",
            "order": 102
        },
        "es.upv.paella.captionsSelectorPlugin": {
            "enabled": true,
            "side": "right",
            "order": 103            
        },
        "es.upv.paella.fileContent": {
            "enabled": true,
            "side": "right",
            "order": 104,
            "dataContext": "file.content"
        },        
        "es.upv.paella.relatedVideos": {
            "enabled": true,
            "side": "right",
            "order": 105
        },
        "es.upv.paella.fullscreenButton": {
            "enabled": true,
            "side": "right",
            "order": 106
        },


        "/* settings toolbox */": "*********************************************************",
        "org.opencast.paella.eventDetailsPlugin": {
            "enabled": true,
            "side": "right",
            "parentContainer": "settingsGroup",
            "order": 10            
        },
        "es.upv.paella.qualitySelector": {
            "enabled": true,
            "side": "right",
            "order": 20,
            "parentContainer": "settingsGroup"
        },
        "es.upv.paella.audioSelector": {
            "enabled": true,
            "side": "right",
            "parentContainer": "settingsGroup",
            "order": 30
        },
        "org.opencast.paella.downloadsPlugin": {
            "enabled": true,
            "parentContainer": "settingsGroup",
            "side": "right",
            "order": 50,
            "tracks": {
                "downloadFlavors": false,
                "downloadTags": false,
                "downloadMimeTypes": ["audio/m4a", "video/mp4", "text/vtt"]
            },
            "attachments": {
                "downloadFlavors": [],
                "downloadTags": false,
                "downloadMimeTypes": false
            },

            "enableOnLicenses": [
                "CC-BY",
                "CC-BY-SA",
                "CC-BY-ND",
                "CC-BY-NC",
                "CC-BY-NC-SA",
                "CC-BY-NC-ND",
                "CC0"
            ],
            "enableOnWritePermission": true
        },        
        "es.upv.paella.keyboardShortcuts": {
            "enabled": true,
            "order": 80,
            "side": "right",
            "parentContainer": "settingsGroup",
            "installKeyboardManager": true,
            "validPlaybackRates": [0.75, 1, 1.25, 1.5, 2]
        },
        "es.upv.paella.version": {
            "enabled": true,
            "side": "right",
            "parentContainer": "settingsGroup",
            "order": 90
        },
        "es.upv.paella.cookieconsent": {
            "enabled": true,
            "side": "right",
            "parentContainer": "settingsGroup",
            "order": 92
        },



        "/* slides toolbar */": "*********************************************************",
        "es.upv.paella.nextSlideNavigatorButton": {
            "enabled": true,
            "content": [
                "presentation"
            ],
            "side": "left",
            "order": 1
        },
        "es.upv.paella.prevSlideNavigatorButton": {
            "enabled": true,
            "content": [
                "presentation"
            ],
            "side": "left",
            "order": 0
        },

        
        


        "/* other plugins */": "*********************************************************",
        "es.upv.paella.onboarding": {
            "enabled": true
        },
        "es.upv.paella.findCaptionsPlugin": {
            "enabled": false,
            "side": "right",
            "order": 10
        },

        "es.upv.paella.slideMapProgressBarPlugin": {
            "enabled": true,
            "markColor": {
                "mouseOut": "#0A0A0A",
                "mouseHover": "#9CA3AF"
            },
            "markWidth": 3,
            "drawBackground": false
        },

        "es.upv.paella.zoomPlugin": {
            "enabled": true,
            "order": 1,
            "maxZoom": 400,
            "showButtons": true,
            "target": "presenter"
        },

        "es.upv.paella.videoCanvas": {
            "enabled": true,
            "order": 2
        },

        "es.upv.paella.audioCanvas": {
            "enabled": true,
            "order": 1
        },

        "es.upv.paella.localStorageDataPlugin": {
            "enabled": true,
            "order": 0,
            "context": [
                "default",
                "trimming",
                "preferences"
            ]
        },

        "es.upv.paella.vttManifestCaptionsPlugin": {
            "enabled": true
        },
        "es.upv.paella.dfxpManifestCaptionsPlugin": {
            "enabled": true
        },
        "es.upv.paella.hlsCaptionsPlugin": {
            "enabled": true
        },

        
        "es.upv.paella.arrowSlidesNavigator": {
            "enabled": false,
            "target": [
                "presentation",
                "presenter"
            ]
        },

        "/* user event tracking plugins */": "*********************************************************",
        "es.upv.paella.userEventTracker": {
            "enabled": false,
            "context": "userTracking",
            "events": [
                "PLAY",
                "PAUSE",
                "STOP",
                "ENDED",
                "SEEK",
                "FULLSCREEN_CHANGED",
                "VOLUME_CHANGED",
                "CAPTIONS_CHANGED",
                "BUTTON_PRESS",
                "SHOW_POPUP",
                "HIDE_POPUP",
                "ENTER_FULLSCREEN",
                "EXIT_FULLSCREEN",
                "VOLUME_CHANGED",
                "CAPTIONS_ENABLED",
                "CAPTIONS_DISABLED",
                "LAYOUT_CHANGED",
                "PLAYBACK_RATE_CHANGED",
                "VIDEO_QUALITY_CHANGED",
                "RESIZE_END"
            ]
        },
        "es.upv.paella.debug.userTrackingDataPlugin": {
            "enabled": false,
            "context": [
                "userTracking"
            ]
        },
        "es.upv.paella.analytics.userTrackingDataPlugin": {
            "enabled": false,
            "trackingId": "configure_your_tracking_id_here",
            "domain": "",
            "category": true,
            "context": [
                "userTracking"
            ]
        },
        "org.opencast.paella.matomo.userTrackingDataPlugin": {
            "enabled": false,
            "context": [
                "userTracking"
            ],
            "server": "//matomo.server.com/",
            "siteId": "1",
            "trackerUrl": {
                "php": "matomo.php",
                "js": "matomo.js"
            },
            "matomoGlobalLoaded": false,
            "mediaAnalyticsTitle": "${videoId}",
            "cookieType": "tracking",
            "logUserId": true,
            "events": {
                "category": "PaellaPlayer",
                "action": "${event}",
                "name": "${eventData}"
            },
            "customDimensions": {
                "1": "${videoId}",
                "2": "${metadata.series} - ${metadata.seriestitle}",
                "3": "${metadata.presenters}"
            }
        },

        "org.opencast.paella.data.relatedDocumentsDataPlugin": {
            "enabled": true,
            "context": ["file.content"],
            "docs": [
                {
                    "title": "Summary",
                    "content": { "flavor": "ai/summary", "mimeType": "text/markdown" }
                },
                {
                    "title": "FAQ",
                    "content": { "flavor": "ai/faq", "mimeType": "text/markdown" }
                },
                {
                    "title": "Timeline",
                    "content": { "flavor": "ai/timeline", "mimeType": "text/markdown" }
                },
                {
                    "title": "Study Plan",
                    "content": { "flavor": "ai/study_plan", "mimeType": "text/markdown" }
                },
                {
                    "title": "Podcast Script",
                    "content": { "flavor": "ai/podcast_script", "mimeType": "text/markdown" },
                    "media": { "flavor": "ai/podcast_audio" }
                }
            ]
        },
        "org.opencast.paella.ai.content.attachmentsDataPlugin": {
            "enabled": true,
            "context": ["ai.content"],
            "files": {
                "summary": { "contentFlavor": "ai/summary" },
                "faq": { "contentFlavor": "ai/faq" },
                "timeline": { "contentFlavor": "ai/timeline" },
                "study_plan": { "contentFlavor": "ai/study_plan" },
                "podcast": { "contentFlavor": "ai/podcast_script", "mediaFlavor": "ai/podcast_audio" }
            }
        },

        "org.opencast.paella.data.relatedVideosDataPlugin": {
            "enabled": true
        }
    }
}